{
  "name": "pro-logic-scheduler",
  "version": "2.0.0",
  "description": "High-Performance Construction Scheduling - Ferrari Engine",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "clean": "killall node 2>/dev/null || true; lsof -ti:1420 | xargs kill -9 2>/dev/null || true",
    "start": "npm run clean && sleep 1 && npm run tauri:dev",
    "start:app": "npm run clean && sleep 1 && npm run tauri:dev",
    "start:browser": "npm run clean && sleep 1 && npm run dev",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.5.0",
    "@tauri-apps/cli": "^1.5.0",
    "@vitest/ui": "^4.0.15",
    "vite": "^5.0.0",
    "vitest": "^4.0.15"
  }
}
