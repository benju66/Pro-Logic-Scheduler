{
  "compilerOptions": {
    "checkJs": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "types": []
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src-tauri",
    "tests"
  ]
}

